<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
    <Properties>
        <Property name="basePath">logs</Property>
    </Properties>

    <Appenders>
        <File name="File" fileName="${basePath}/logfile.log" append="true">
            <PatternLayout pattern="%-5p %d{dd-MM-yyyy HH:mm:ss} [%t] %C (%F:%L) - %m%n" />
        </File>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5p %d{dd-MM-yyyy HH:mm:ss} [%t] %C (%F:%L) - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="fatal">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="File" />
        </Root>
        <Logger name="ru.khorolskiy.cha_cha_chat.server" level="trace" />
            <AppenderRef ref="STDOUT" />
        <Logger name="ru.khorolskiy.cha_cha_chat" level="error" />
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="File" />
        <Logger name="ru.khorolskiy.cha_cha_chat" level="info" />
        <AppenderRef ref="STDOUT" />
        <AppenderRef ref="File" />
    </Loggers>
</Configuration>